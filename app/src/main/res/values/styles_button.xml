<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SmallButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/selector_small_button</item>
        <item name="android:layout_height">@dimen/small_button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/small_button_corner</item>
        <item name="android:paddingRight">@dimen/small_button_corner</item>
        <item name="android:textAppearance">@style/ButtonText</item>
    </style>

    <style name="StandardButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/selector_standard_button</item>
        <item name="android:layout_height">@dimen/standard_button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/standard_button_corner</item>
        <item name="android:paddingRight">@dimen/standard_button_corner</item>
        <item name="android:textAppearance">@style/ButtonText</item>
    </style>

    <style name="PostButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/selector_post_button</item>
        <item name="android:layout_height">@dimen/post_button_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/post_button_width</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/post_button_corner</item>
        <item name="android:paddingRight">@dimen/post_button_corner</item>
        <item name="android:textAppearance">@style/ButtonText</item>
    </style>

    <style name="FollowButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/selector_small_button</item>
        <item name="android:layout_height">@dimen/small_button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_45</item>
        <item name="android:paddingEnd">@dimen/padding_45</item>
        <item name="android:paddingTop">@dimen/padding_9</item>
        <item name="android:paddingBottom">@dimen/padding_9</item>
        <item name="android:textAppearance">@style/ButtonText</item>
    </style>

    <style name="DialogButton" parent="SmallButton">
        <item name="android:textAppearance">@style/ButtonText</item>
    </style>

    <style name="DialogNoButton" parent="SmallButton">
        <item name="android:textAppearance">@style/ButtonText</item>
        <item name="android:background">@drawable/selector_small_grey_button</item>
    </style>

    <style name="StandardRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/RadioButtonText</item>
    </style>

    <style name="InterestChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/selector_chip_text</item>
        <item name="chipBackgroundColor">@color/selector_chip_button</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/InterestChipText</item>
    </style>

    <style name="RecentSearchChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/accent_blue</item>
        <item name="chipBackgroundColor">@color/accent_blue_8a</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/InterestChipText</item>
    </style>

    <style name="InterestChipText" parent="PoppinsMedium">
        <item name="android:textSize">@dimen/font_size_small_x</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FilterChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/selector_filter_chip_text</item>
        <item name="chipBackgroundColor">@color/selector_filter_chip_button</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/FilterText</item>
        <item name="chipMinHeight">@dimen/filter_chip_min_height</item>
        <item name="chipMinTouchTargetSize">@dimen/filter_chip_min_touch_target_size</item>
    </style>

    <style name="ReportButton" parent="StandardButton">
        <item name="android:background">@drawable/selector_report_button</item>
        <item name="android:layout_height">@dimen/standard_button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/standard_button_corner</item>
        <item name="android:paddingRight">@dimen/standard_button_corner</item>
        <item name="android:textAppearance">@style/ButtonText</item>
    </style>

    <style name="StrokedButton" parent="StandardButton">
        <item name="android:textColor">@color/blue_button</item>
        <item name="android:background">@drawable/selector_stroked_button</item>
    </style>

    <style name="NewsDetailsButton" parent="PoppinsMedium">
        <item name="android:textColor">@color/accent_green</item>
        <item name="android:textSize">@dimen/font_size_small_x</item>
    </style>

    <style name="PaymentScreenMainButton" parent="SmallButton">
        <item name="android:background">@drawable/selector_payment_screen_main_button</item>
    </style>

    <style name="PostStoryButton" parent="PostButton">
        <item name="android:background">@drawable/selector_post_story_button</item>
        <item name="android:textColor">@color/blue_button</item>
    </style>

    <style name="ApplyAudioButton" parent="PoppinsMedium">
        <item name="android:background">@drawable/bg_apply_audio_btn</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FollowerOptionButton">
        <item name="android:background">@drawable/selector_follower_option</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/secondary_black</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding_18</item>
        <item name="android:paddingBottom">@dimen/padding_18</item>
    </style>

</resources>