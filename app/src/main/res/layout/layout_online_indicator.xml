<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <merge
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:gravity="center_vertical"
        tools:parentTag="android.widget.LinearLayout">

        <ImageView
            android:id="@+id/ivOnline"
            android:layout_width="@dimen/chat_online_indicator_ic_size"
            android:layout_height="@dimen/chat_online_indicator_ic_size"
            tools:src="@drawable/bg_online_indicator" />

        <TextView
            android:id="@+id/tvOnline"
            style="@style/OnlineIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/chat_online_indicator_text_v_margin"
            android:maxLines="1"
            tools:text="Online" />
    </merge>
</layout>