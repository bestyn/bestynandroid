<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProfileSettings"
            style="@style/SettingsBottomSheetDialogButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_bottom_sheet_dialog_item_height"
            android:drawablePadding="@dimen/settings_bottom_sheet_dialog_item_icon_spacing"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/settings_bottom_sheet_dialog_h_padding"
            android:text="@string/settings_menu_profile_settings"
            app:drawableLeftCompat="@drawable/ic_profile_settings" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_dialog_divider_height"
            android:background="@color/bottom_sheet_dialog_divider"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvPaymentPlans"
            style="@style/SettingsBottomSheetDialogButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_bottom_sheet_dialog_item_height"
            android:drawablePadding="@dimen/settings_bottom_sheet_dialog_item_icon_spacing"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/settings_bottom_sheet_dialog_h_padding"
            android:text="@string/settings_menu_payment_plans"
            app:drawableLeftCompat="@drawable/ic_payment_plans" />

        <View
            android:id="@+id/paymentPlansDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_dialog_divider_height"
            android:background="@color/bottom_sheet_dialog_divider"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvAbout"
            style="@style/SettingsBottomSheetDialogButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_bottom_sheet_dialog_item_height"
            android:drawablePadding="@dimen/settings_bottom_sheet_dialog_item_icon_spacing"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/settings_bottom_sheet_dialog_h_padding"
            android:text="@string/settings_menu_about"
            app:drawableLeftCompat="@drawable/ic_about" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_dialog_divider_height"
            android:background="@color/bottom_sheet_dialog_divider"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvPrivacyPolicy"
            style="@style/SettingsBottomSheetDialogButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_bottom_sheet_dialog_item_height"
            android:drawablePadding="@dimen/settings_bottom_sheet_dialog_item_icon_spacing"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/settings_bottom_sheet_dialog_h_padding"
            android:text="@string/settings_menu_privacy_policy"
            app:drawableLeftCompat="@drawable/ic_privacy_policy" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_dialog_divider_height"
            android:background="@color/bottom_sheet_dialog_divider"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvTermsAndConditions"
            style="@style/SettingsBottomSheetDialogButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_bottom_sheet_dialog_item_height"
            android:drawablePadding="@dimen/settings_bottom_sheet_dialog_item_icon_spacing"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/settings_bottom_sheet_dialog_h_padding"
            android:text="@string/settings_menu_terms"
            app:drawableLeftCompat="@drawable/ic_terms_and_conditions" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_dialog_divider_height"
            android:background="@color/bottom_sheet_dialog_divider"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvLogout"
            style="@style/SettingsBottomSheetDialogLogoutButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_bottom_sheet_dialog_item_height"
            android:drawablePadding="@dimen/settings_bottom_sheet_dialog_item_icon_spacing"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/settings_bottom_sheet_dialog_h_padding"
            android:text="@string/settings_menu_logout"
            app:drawableLeftCompat="@drawable/ic_logout" />

    </LinearLayout>
</layout>