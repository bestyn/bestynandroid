<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <merge
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:gravity="center_vertical"
        tools:parentTag="android.widget.LinearLayout">


        <ImageView
            android:id="@+id/reactionIcon"
            android:layout_width="@dimen/reaction_button_icon_size"
            android:layout_height="@dimen/reaction_button_icon_size"
            tools:src="@drawable/ic_no_reaction" />

        <TextView
            android:id="@+id/reactionText"
            style="@style/ReactionButtonText"
            android:layout_marginLeft="@dimen/reaction_button_icon_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="@string/reaction_like" />
    </merge>
</layout>