<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape>
            <gradient android:angle="135" android:endColor="@color/report_reason_unchecked_end_color" android:startColor="@color/report_reason_unchecked_start_color" />
            <corners android:radius="@dimen/report_reason_button_corner" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <gradient android:angle="135"
                android:endColor="@color/report_reason_checked_end_color"
                android:startColor="@color/report_reason_checked_start_color" />
            <corners android:radius="@dimen/report_reason_button_corner" />
        </shape>
    </item>
</selector>